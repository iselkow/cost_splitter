%h2 Expenses
%table
  %thead
    %tr
      %th Item
      %th Cost
      %th Purchased By
      %th Users
  %tbody
    - @expenses.each do |expense|
      %tr
        %td= expense.item
        %td= display_as_currency expense.cost
        %td= expense.person
        %td= expense.user_list

%br

%strong Add New Expense
%form(action="/expenses" method="POST")
  %dl
    %dt Item
    %dd
      %input(type="text" placeholder="Item" name="item")
    %dt Cost
    %dd
      %input(type="text" placeholder="Cost" name="cost")
    %dt Purchaser
    %dd
      %select(name="person_id")
        - @people.each do |person|
          %option{ value: person.id}= person.name
    %dt People sharing expense
    %dd
      - @people.each do |person|
        %input{ type: "checkbox", name: "person_expense_record[]", value: person.id}= person.name
        %br
  %button(type="submit") Submit

%br
%a(href="/" title="Index") Back
