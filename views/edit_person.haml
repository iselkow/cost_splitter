%h2= "Edit #{@person.name}"
%form(action="/people/#{@person.id}/edit" method="POST")
  %div(class="form-group")
    %label(for="name") Name
    %input{type: "text", value: @person.name, name: "name", id: "name", class: "form-control"}
  %button(type="submit") Update Person

%br
%a(href="/people" title="People") Back
